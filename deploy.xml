<?xml version="1.0" encoding="UTF-8"?>
<deploydescriptor>
	<global>
		<id>semanticnotifications</id>
		<version>1.3.0</version>
		<patchlevel>0</patchlevel>
		<vendor>ontoprise GmbH</vendor>
		<maintainer>ontoprise GmbH</maintainer>
		<license>GPL-v2</license>
		<instdir>extensions/SemanticNotifications</instdir>
		<description>
			Sends notifications when values of semantic properties change.
		</description>
		<helpurl>http://smwforum.ontoprise.com/smwforum/index.php/Help:Semantic_Notifications_Extension</helpurl>
		<dependencies>
			<dependency from="1.6.0">smwhalo</dependency>
			<dependency from="1.3.6">semanticgardening</dependency>
		</dependencies>
	</global>
	
	<codefiles>
		<!-- empty -->
	</codefiles>

	<wikidumps>
		<!-- empty -->
	</wikidumps>

	<resources>
		<!-- empty -->
	</resources>

	<configs>
		<precedes ext="SemanticGardening" />

		<new>
			<require name="semnot"
				file="extensions/SemanticNotifications/includes/SN_Initialize.php" />
			<function name="enableSemanticNotifications">
			</function>
			<script file="maintenance/SN_Setup.php" />
		</new>
		<uninstall>
			<script file="maintenance/SN_Setup.php"
				params="--delete" />			
		</uninstall>
	</configs>
</deploydescriptor>